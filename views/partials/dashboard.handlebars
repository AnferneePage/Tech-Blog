<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Your Dashboard</title>
		<link rel="stylesheet" href="assets/css/style.css" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
		/>
	</head>

	<body>
		<header>
			<nav class="navbar" role="navigation" aria-label="main navigation">
				<div class="navbar-brand">
					<a class="navbar-item">
						<h1 class="header">The Tech Blog</h1>
					</a>

					<a
						role=" button"
						class="navbar-burger"
						aria-label="menu"
						aria-expanded="false"
						data-target="navbarBasicExample"
					>
						<span aria-hidden="true"></span>
						<span aria-hidden="true"></span>
						<span aria-hidden="true"></span>
					</a>
				</div>

				<div id="navbarBasicExample" class="navbar-menu">
					<div class="navbar-start">
						<a href="/blog-post" class="navbar-item">
							Home
						</a>

						<a href="/dashboard" class="navbar-item">
							Dashboard
						</a>

					</div>

				</div>
			</nav>
		</header>

		<form id="new-post-form" action="/dashboard" method="post">
			<div class="new-post-container">
				<div class="np-header-container">
					<h1 class="np-header">Create Post</h1>
				</div>
				<div class="np-info-container">
					<h2
						style="font-size: 2rem; font-weight: 600; margin-bottom: 0.5rem;"
					>Title</h2>
					<div class="control">
						<input
							class="input"
							type="text"
							name="title"
							placeholder="Title"
						/>
					</div>
					<h4
						style="font-size: 2rem; font-weight: 600; margin-top: 1rem; margin-bottom: 0.5rem;"
					>Content</h4>
					<div class="field">
						<div class="control">
							<textarea
								style="height: 40%;"
								class="textarea is-medium"
								name="contents"
								placeholder="Enter your message..."
							></textarea>
						</div>
					</div>
					<button
						id="new-post-button"
						type="submit"
						name="submit"
						class="LG-SC-create-new-postBTN"
					>
						<h3>Post</h3>
					</button>

				</div>
			</div>
		</form>

		<div style="margin-top:2rem;" class="blog-list">
			{{#each userPosts}}
				<div class="blog" id="post-{{this.id}}">
					<div class="header-container">
						<span id="delete"
							style="float:right;"
							class="material-symbols-rounded"
							data-post-id="{{this.id}}"
						>
							delete
						</span>
						<h1 class="blog-title">{{this.title}}</h1>
					</div>
					<div class="blog-p-container">
						<p>{{this.contents}}</p>
					</div>
					<div class="blog-info-container">
						<h2>
							<div class="entry">
								<span>By
									<strong>{{this.User.username}}</strong>
								</span>
								<span>&nbsp;on
									<strong>{{formatDateWithoutSeconds
											this.created_at
										}}</strong>
								</span>
							</div>
						</h2>
					</div>
				</div>
			{{/each}}
		</div>

		<script src="../../public/assets/js/dashboard.js"></script>
		<script src="../../public/assets/js/script.js"></script>
	</body>

</html>