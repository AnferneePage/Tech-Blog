<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
    />
  </head>

  <body>
    <header>
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item">
            <h1 class="header">The Tech Blog</h1>
          </a>

          <a
            role=" button"
            class="navbar-burger"
            aria-label="menu"
            aria-expanded="false"
            data-target="navbarBasicExample"
          >
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
            <a href="/" class="navbar-item">
              Home
            </a>

            <a href="/dashboard" class="navbar-item">
              Dashboard
            </a>

          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <a href="/signup" id="sign-upBTN" class="button is-primary">
                  <strong>Sign up</strong>
                </a>
                <a href="/login" class="button is-light">
                  Log in
                </a>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <div class="blog-list">
  {{#each blogs}}
    <div class="blog">
      <div class="header-container">
        <h1 class="blog-title">{{this.title}}</h1>
      </div>
      <div class="blog-p-container">
        <p>{{this.contents}}</p>
      </div>
      <div class="blog-info-container">
        <h2>
          <div class="entry">
            <span>By <strong>{{this.User.username}}</strong></span>
            <span>&nbsp;on
              <strong>{{formatDateWithoutSeconds this.created_at}}</strong></span>
          </div>
        </h2>
      </div>
    </div>
  {{/each}}
</div>


    <script src="assets/js/script.js"></script>
  </body>

</html>